{% set arr = [
    '../../images/brands/panasonic',
    '../../images/brands/toshiba',
    '../../images/brands/electrolux',
    '../../images/brands/lg',
    '../../images/brands/samsung',
    '../../images/brands/midea',
    '../../images/brands/hitachi',
    '../../images/brands/sharp',
] %}
{% set arrProduct = [
    '../../images/tu-lanh/tu-lanh-1',
    '../../images/tu-lanh/tu-lanh-5',
    '../../images/tu-lanh/tu-lanh-4',
    '../../images/tu-lanh/tu-lanh-3',
] %}
<div class="box_container box_container__refrigerator">
    <div class="box_header">
        <h4 class="box_title">
            <i class="far fa-refrigerator"></i> Điện lạnh
        </h4>
        <div class="box_tab">
            <a href="#" class="box_tab__item active">Tủ lạnh</a>
            <a href="#" class="box_tab__item">Tủ cấp đông</a>
            <a href="#" class="box_tab__item">Tủ mát</a>
        </div>
    </div>
    <div class="box_body">
        <div class="box_brands">
            {% for i in arr %}
            <a href="#" class="box_brands__item">
                <img src="{{ i }}.png" alt="" />
            </a>
            {% endfor %}
        </div>
        <div class="box_product">
            <div class="product_lst">
                <div class="row">
                    {% for item in 0..4 %}
                        <div class="col-five">
                            <div class="product_item">
                                <span class="product_sale">-{{ random(99) }}%</span>
                                <a href="#" title="" class="product_item__thumb">
                                    <img src="{{ random(arrProduct) }}.png" alt=""/>
                                </a>
                                <h2 class="product_name">
                                    <a href="#" title="">Sony 48-inch OLED 4K A9S - Android 16GB; X1 Ultimate; </a>
                                </h2>
                                <div class="product_tag">
                                    <a href="#" title="">2 Chiều</a>
                                    <a href="#" title="">9000 BTU</a>
                                </div>
                                <div class="product_price">
                                    <div class="product_price__current">25.229.000đ</div>
                                    <div class="product_price__old">1.225.229đ</div>
                                    {% if item == 3 %}
                                        <div class="product_status non_stock">
                                            <strong class="product_status__check"></strong>
                                            <span>Tạm hết</span>
                                        </div>
                                    {% else %}
                                        <div class="product_status">
                                            <strong class="product_status__check"></strong>
                                            <span>Còn hàng</span>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="product_gift">
                                    Quà trị giá: <strong>300.000đ</strong>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="box_banner">
            <div class="row no-gutters">
                <div class="col-6">
                    <a href="#" title="">
                        <img src="https://via.placeholder.com/600x240.png" alt=""/>
                    </a>
                </div>
                <div class="col-6">
                    <a href="#" title="">
                        <img src="https://via.placeholder.com/1600x240.png" alt=""/>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
