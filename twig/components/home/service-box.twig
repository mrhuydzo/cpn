{% set arr = [
	{title: 'MIỄN PHÍ VẬN CHUYỂN',content: 'Với đơn Mua hàng Online > 1 triệu',icon: 'images/service-1'},
	{title: 'THẺ THÀNH VIÊN',content: 'Đổi nhiều quà tặng hấp dẫn chỉ có tại CPN',icon: 'images/service-2'},
	{title: 'Tích điểm đơn hàng',content: 'Ứng với giá trị đơn hàng, khách hàng được tích điểm đổi nhiều quà tặng hấp dẫn.',icon: 'images/service-3'},
	{title: 'SUPPORT ONLINE',content: 'Dịch vụ Hỗ trợ, giải đáp chăm sóc khách hàng uy tín',icon: 'images/service-4'},
] %}

<div class="service_box">
	<div class="service_box__container">
		{% for i in arr %}
		<div class="service_box__item">
			<div class="service_box__icon">
				<img src="{{ i.icon }}.png" alt="" />
			</div>
			<div class="flex-grow-1">
				<h3 class="service_box__title">
					{{ i.title }}
				</h3>
				<p class="service_box__summary">
					{{ i.content }}
				</p>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
