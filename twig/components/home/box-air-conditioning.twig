{% set arr = [
    'images/brands/panasonic',
    'images/brands/casper',
    'images/brands/casper',
    'images/brands/lg',
    'images/brands/samsung',
    'images/brands/midea',
    'images/brands/hitachi',
    'images/brands/sharp',
] %}

{% set arrProduct = [
    'images/air-cond/air-cond-1',
    'images/air-cond/air-cond-2',
    'images/air-cond/air-cond-3',
] %}
<div class="box_container box_container__air-conditioner">
    <div class="box_header">
        <h4 class="box_title">
            <i class="far fa-air-conditioner"></i> Điều hòa
        </h4>
        <div class="box_tab">
            <a href="#" class="box_tab__item active">9000 BTU</a>
            <a href="#" class="box_tab__item">12000 BTU</a>
            <a href="#" class="box_tab__item">18000 BTU</a>
            <a href="#" class="box_tab__item">1 Chiều</a>
            <a href="#" class="box_tab__item">2 Chiều</a>
            <a href="#" class="box_tab__item">Inverter</a>
        </div>
    </div>
    <div class="box_body">
        <div class="box_brands">
            {% for i in arr %}
                <a href="#" class="box_brands__item">
                    <img src="{{ i }}.png" alt="" />
                </a>
            {% endfor %}
        </div>
        <div class="box_product">
            <div class="product_lst">
                <div class="row">
                    {% for item in 0..4 %}
                        <div class="col-five">
                            <div class="product_item">
                                <span class="product_sale">-{{ random(99) }}%</span>
                                <a href="#" title="" class="product_item__thumb">
                                    <img src="{{ random(arrProduct) }}.png" alt=""/>
                                </a>
                                <h2 class="product_name">
                                    <a href="#" title="">Sony 48-inch OLED 4K A9S - Android 16GB; X1 Ultimate; </a>
                                </h2>
                                <div class="product_tag">
                                    <a href="#" title="">4K</a>
                                    <a href="#" title="">SMART</a>
                                    <a href="#" title="">50 inch</a>
                                </div>
                                <div class="product_price">
                                    <div class="product_price__current">25.229.000đ</div>
                                    <div class="product_price__old">1.225.229đ</div>
                                    {% if item == 3 %}
                                        <div class="product_status non_stock">
                                            <strong class="product_status__check"></strong>
                                            <span>Tạm hết</span>
                                        </div>
                                    {% else %}
                                        <div class="product_status">
                                            <strong class="product_status__check"></strong>
                                            <span>Còn hàng</span>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="product_gift">
                                    Quà trị giá: <strong>300.000đ</strong>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
