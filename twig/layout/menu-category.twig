{% set arr = [
    {name: 'Laptop', icon: ''},
] %}

{% set arrMenuMega = [
    'Thương hiệu',
    'Theo nhu cầu',
    'Theo Giá bán',
    'Theo Chip (CPU)',
    'Laptop bán chạy',
    'Linh kiện - Phụ kiện',

] %}
<div class="menu_category">
    <div class="menu_category__header">
        Danh mục sản phẩm
    </div>
    <div class="menu_category__body">
        <div class="menu_category__lst">
            {% for i in arr %}
            <div class="menu_category__item">
                <a href="#" class="menu_category__slug" title="{{ i.name }}">
                    <i class="far fa-shop"></i> {{ i.name }}
                </a>
                <div class="menu_mega">
                    <div class="menu_mega__row">
                        {% for item in arrMenuMega %}
                        <div class="menu_mega__col">
                            <div class="menu_mega__header">{{ item }}</div>
                            <div class="menu_mega__lst"></div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
